        <article>
          <img src="../images/coffees/<%= coffee.reference %>.png" alt="<%= coffee.name %>">
          <div>
            <h2><%= coffee.name %></h2>
            <p>Origine <%= coffee.origin %></p>
            <p><%= coffee.price_kg %></p>
            <a class="button-outline" href="/article/<%= coffee.id %>">Voir le détail</a>
          </div>
        </article>
      <% }) %>
